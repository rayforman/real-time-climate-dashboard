# Database Configuration
DATABASE_URL=postgresql://climate_user:climate_password@localhost:5432/climate_dashboard
POSTGRES_DB=climate_dashboard
POSTGRES_USER=climate_user
POSTGRES_PASSWORD=climate_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# FastAPI Configuration
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
NOAA_BASE_URL=https://www.ndbc.noaa.gov/data/realtime2
OPENAI_API_KEY=your-openai-api-key-here
MAPBOX_API_KEY=your-mapbox-api-key-here

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://climate_user:climate_password@localhost:5432/climate_dashboard
AIRFLOW__CORE__FERNET_KEY=your-secret-fernet-key-here-32-chars-exactly
AIRFLOW__WEBSERVER__SECRET_KEY=your-airflow-secret-key

# Redis Cache TTL Settings (in seconds)
CACHE_LATEST_READING_TTL=360     # 6 minutes (matches NOAA update frequency)
CACHE_BUOY_METADATA_TTL=3600     # 1 hour
CACHE_USER_SESSION_TTL=1800      # 30 minutes
CACHE_POPULAR_BUOYS_TTL=900      # 15 minutes
CACHE_ALERT_STATES_TTL=60        # 1 minute

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Development Flags
ENABLE_CORS=true
LOG_LEVEL=DEBUG
RELOAD_ON_CHANGE=true